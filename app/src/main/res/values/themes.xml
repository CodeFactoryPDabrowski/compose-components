<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Allows us to override night specific attributes in the
         values-night folder. -->
    <style name="NightAdjusted.Theme.Stepper" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <!-- Allows us to override platform level specific attributes in their
         respective values-vXX folder. -->
    <style name="PlatformAdjusted.Theme.Stepper" parent="NightAdjusted.Theme.Stepper">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- The final theme we use -->
    <style name="Theme.Stepper" parent="PlatformAdjusted.Theme.Stepper" />
</resources>
